<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <timestamp key="byDate" datePattern="yyyy_MM_dd-HH.mm.ss"/>

    <property name="pattern" value="[%thread/%level]: [%class{0}] %msg%n"/>
    <property name="timestampedPattern" value="[%d{HH:mm:ss}] [%thread/%level]: [%class{0}] %msg%n"/>
    <property name="logDir" value="${user.home}/.papervision/logs"/>

    <!-- STDOUT = TRACE, DEBUG, INFO -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>TRACE</level>
            <onMatch>DENY</onMatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>DENY</onMatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
        </filter>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
        </filter>

        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <!-- STDERR = WARN, ERROR -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <!-- FILE = everything (TRACE+) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${logDir}/papervision-${byDate}.log</file>
        <append>false</append>

        <encoder>
            <pattern>${timestampedPattern}</pattern>
        </encoder>
    </appender>

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="STDERR"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
